<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.picklecode.findurluv.MainActivity">

    <FrameLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_menu_height"
        android:layout_gravity="bottom"
        android:background="@color/themeColor"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_title_size"
            android:layout_gravity="center"
            app:srcCompat="@drawable/title_logo_small" />
    </FrameLayout>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_menu"
        android:layout_above="@+id/menu_bar"
        >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimaryDark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_menu_height"
            android:layout_gravity="bottom"
            android:background="@color/themeColor"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/menu_home"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:src="@drawable/menu_home_s"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <View
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/whiteTranparent"
                />
            <ImageView
                android:id="@+id/menu_love"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:src="@drawable/menu_love_s"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <View
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/whiteTranparent"
                />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/menu_chat"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:src="@drawable/menu_chat_s"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    />
                <TextView
                    android:id="@+id/badge_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_window"
                    android:textSize="15dp"
                    android:layout_marginRight="10dp"
                    android:text="0"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="top|right"
                    android:textColor="@color/white"
                    />
            </FrameLayout>
            <View
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/whiteTranparent"
                />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/menu_log"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:src="@drawable/menu_log_s"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    />
                <TextView
                    android:id="@+id/badge_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_window"
                    android:textSize="15dp"
                    android:layout_marginRight="10dp"
                    android:text="0"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="top|right"
                    android:textColor="@color/white"
                    />
            </FrameLayout>
            <View
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/whiteTranparent"
                />
            <ImageView
                android:id="@+id/menu_setting"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:src="@drawable/menu_setting_s"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
